<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="30"
    android:background="#2254a3"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <LinearLayout
        android:background="@drawable/register_screen_cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:src="@drawable/signup_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/app_name"
                android:textSize="50dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:textColor="@android:color/black"/>

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/register_screen_cards_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="24"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fullName_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="FullName"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_full_name_sign_up"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/userName_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="UserName"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_username_sign_up"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/email_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="Email"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_email_sign_up"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>


            <EditText
                android:id="@+id/password_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="Password"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_password_sign_in"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/edit_profile_background"/>

            <TextView
                android:id="@+id/signIn_link"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Don't have an account? signUp here"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"/>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>

