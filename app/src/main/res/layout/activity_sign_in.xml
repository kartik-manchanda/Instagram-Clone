<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="15"
    android:background="#00aeac"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <LinearLayout
        android:background="@drawable/login_screen_cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:src="@drawable/login_screen_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/app_name"
                android:textSize="50dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:textColor="@android:color/black"/>

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/login_screen_cards2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="16"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_signIn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"

                android:hint="Email"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_email_sign_in"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/password_signIn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="Password"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_password_sign_in"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/edit_profile_background"/>

            <TextView
                android:id="@+id/signUp_link"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Don't have an account? signUp here"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"/>


        </LinearLayout>


    </LinearLayout>

    


</LinearLayout>